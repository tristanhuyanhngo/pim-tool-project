<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="300" prefHeight="150">

    <Label text="Are you sure?" />

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="okDialogButton" text="%MainPerspective.HeaderComponent.label.languageFR" onAction="#onOKButtonClicked" />
        <Button fx:id="cancelDialogButton" text="Cancel" onAction="#onCancelButtonClicked" />
    </HBox>

</VBox>
