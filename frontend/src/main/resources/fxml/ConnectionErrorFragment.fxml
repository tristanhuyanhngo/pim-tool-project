<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      VBox.vgrow="ALWAYS"
      stylesheets="@../styles/ConnectionErrorFragment.css"
      spacing="15"
>
    <padding>
        <Insets top="80"/>
    </padding>
    <HBox alignment="CENTER" spacing="50">
        <ImageView preserveRatio="true">
            <Image url="@../images/error-connection.png"/>
        </ImageView>
        <VBox styleClass="connection-error-fragment-container" spacing="30" alignment="CENTER_LEFT">
            <VBox spacing="15">
                <Label fx:id="unexpectedErrorOccur" styleClass="connection-error-fragment-main-color"
                       text="%MainPerspective.MainContentComponent.ConnectionErrorFragment.label.unexpectedErrorOccur"/>
                <HBox>
                    <Label fx:id="please" styleClass="connection-error-fragment-main-color"
                           text="%MainPerspective.MainContentComponent.ConnectionErrorFragment.label.please"/>
                    <Label fx:id="contactYourAdministrator" styleClass="connection-error-fragment-red-color"
                           text="%MainPerspective.MainContentComponent.ConnectionErrorFragment.label.contactYourAdmin"/>
                </HBox>
            </VBox>
            <HBox>
                <Label fx:id="or" styleClass="connection-error-fragment-main-color"
                       text="%MainPerspective.MainContentComponent.ConnectionErrorFragment.label.or"/>
                <Label fx:id="backToSearchProject" styleClass="connection-error-fragment-blue-color"
                       text="%MainPerspective.MainContentComponent.ConnectionErrorFragment.label.backToSearchProject"/>
            </HBox>
        </VBox>
    </HBox>
</VBox>
