<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="110" styleClass="header-application" stylesheets="@../styles/HeaderComponent.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <HBox VBox.vgrow="ALWAYS">
        <padding>
            <Insets left="200.0" />
        </padding>
        <HBox alignment="CENTER" spacing="20">
            <ImageView fitWidth="80" preserveRatio="true">
                <Image url="@../images/logo_elca.png" />
            </ImageView>
            <Label fx:id="labelAppTitle" styleClass="header-application-title" text="%MainPerspective.HeaderComponent.label.appTitle">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin></Label>
        </HBox>
        <HBox spacing="150">
            <padding>
                <Insets left="500" />
            </padding>
            <HBox alignment="CENTER" spacing="5">
                <Label fx:id="labelEN" styleClass="header-language-option, header-language-option-active" text="%MainPerspective.HeaderComponent.label.languageEN" />
<!--                <Separator maxHeight="30" orientation="VERTICAL" />-->
                <Label styleClass="header-short-separator">|</Label>
                <Label fx:id="labelFR" styleClass="header-language-option" text="%MainPerspective.HeaderComponent.label.languageFR" />
            </HBox>
            <HBox alignment="CENTER" spacing="75">
                <Label fx:id="labelHelpButton" styleClass="header-button, header-help-button" text="%MainPerspective.HeaderComponent.label.helpButton" />
                <Label fx:id="labelLogoutButton" styleClass="header-button, header-logout-button" text="%MainPerspective.HeaderComponent.label.logoutButton" />
            </HBox>
        </HBox>
    </HBox>
    <Separator />
</VBox>
